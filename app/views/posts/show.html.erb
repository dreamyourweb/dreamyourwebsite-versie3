<div id="fb-root"></div>

<h3>Blog post</h3>
<hr class="small-line">
<div id="post-header">
	<div class="post-blog-photo-shadow">
		<%= link_to image_tag(@post.partner.avatar_url.to_s, :alt => @post.partner.name, :title => @post.partner.name), partner_path(@post.partner) %>
	</div>
	<div id="post-info">
		<h4><%= link_to(@post.title, partner_post_path(@post.partner, @post), :class => "post-title")%></h4>
		<p class="bookman">Geschreven door <%= @post.partner.name %></p>
		<p class="bebas"><%= @post.updated_at.to_date.to_s %></p>
	</div>
</div>
<div style="clear:both"></div>

<div id="post-body">
	<p style="font-weight:bold"><%= @post.excerpt.html_safe %></p><br>
	<p><%= @post.body.html_safe %></p>
</div>

<div class="bookman-link-float">
	<%= link_to '>> Geef commentaar', {:action => "new", :controller => "comments", :post_id => @post.title_for_url} %>
</div>
<div class="bookman-link-float">
	<%= link_to '>> Neem contact op', {:action => "index", :controller => "contact", :to => build_mail_address(@partner.name), :subject => @post.title} %>
</div> 
<div class="bookman-link-float">
	<%= link_to ">> Ga terug", :back %>
</div>
<div style="clear:both"></div>
<% if admin_signed_in? %>
	<br><%= link_to 'Edit post', edit_partner_post_path(@partner, @post) %> | 
	<%= link_to 'Delete post', partner_post_path(@partner, @post), confirm: "Are you sure?", method: :delete %><br>
<% end %>
<br><div class="fb-like" data-href=<%=partner_post_path(@partner, @post)%> data-send="true" data-width="450" data-show-faces="true", :data-href></div>

<hr class="small-line">
<h4>Comments</h4>
<%= render :partial => "comment", :collection => @comments%>
