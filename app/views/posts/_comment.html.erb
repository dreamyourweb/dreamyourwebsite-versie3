<div class="comment-container">
	<div class="comment-head"><p>Door: <span class="bookman"><%= raw Sanitize.clean(comment.name) %></span> op <%= comment.created_at.to_date %></p> 
	</div>
	<div class="comment-body">
		<p><%= raw Sanitize.clean(comment.body, Sanitize::Config::BASIC) %></p>
	</div>
	<% #if admin_signed_in? %>
	<div class="admin">
		<p><%= raw Sanitize.clean(comment.email) %></p>
		<p><%= link_to 'Edit comment', edit_partner_post_comment_path(@partner, @post, comment) %> |
		<%= link_to 'Delete comment', partner_post_comment_path(@partner, @post, comment), confirm: "Are you sure?", method: :delete %></p>
	</div>
	<% #end %>	
</div>
