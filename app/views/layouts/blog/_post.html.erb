	<% if !post.partner.nil? %>
		<div class="post-container">
			<div class="post-header">
			<div class="post-blog-photo inner-shadow lifted">
					<%= link_to image_tag(post.partner.avatar_url(:small).to_s, :alt => post.partner.name, :title => post.partner.name), partner_path(post.partner) %>
			</div>
			<div id="post-info">
  	  			<h4><%= link_to(post.title, partner_post_path(post.partner, post), :class => "post-title")%></h4>
				<p class="bookman">Geschreven door <%= link_to post.partner.name, partner_path(post.partner) %> op <%= post.updated_at.to_date.to_s %></p>
			</div>
		</div>
		<div id="post-excerpt">
	  		<p><%= post.excerpt.html_safe %><br>
					<%= link_to "Lees verder", partner_post_path(post.partner, post), :class => "bookman-link" %>
			</p>
			<% if admin_signed_in? %>
  	  			<br><%= link_to 'Edit', edit_partner_post_path(post.partner, post), :class => "bookman-link" %> | 
				<%= link_to 'Destroy', partner_post_path(post.partner, post), confirm: 'Are you sure?', method: :delete, :class => "bookman-link" %>
			<% end %>
		</div>			
		</div>
		<hr>
	<% end %>
