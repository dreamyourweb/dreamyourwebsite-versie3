<!DOCTYPE html>
<html>
<head>
  <title>Dreamyourweb | <%= manageable_layout_content_for :title %></title>
	<%= render 'layouts/head' %>
  <%= csrf_meta_tags %>
	<%= render 'layouts/analytics' %>
</head>
<body>
	<div id="root">
	<%= render 'layouts/header' %>

	<div style="clear:both"></div>

	<% flash.each do |key, value| %>
 		<%= content_tag(:div, value, :class => "site-flash #{key}") %>
	<% end %>
	
	<%= render "strip" %>

	<div class='content'>
		<div id='home-left'>
			<%= yield %>
		</div>
		<div id="sidebar-right">
			<%= render "sidebar" %>
			<h3>Laatste tweet</h3>
			<hr class="small-line">
			<div id="last-tweet">
				<%= @lasttweet %>
			</div>
		</div>
	</div>

	<div style="clear:both"></div>
   	<div id="root_footer"></div>
	</div>
	</div>
	<%= render 'layouts/footer' %>
</body>
</html>
