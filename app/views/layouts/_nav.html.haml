.contain-to-grid
  %nav.top-bar.dyw-nav
    %ul
      %li.name
        %h1
          = link_to('dreamyourweb', root_path, :id => "header-logo-link")
      %li.toggle-topbar
        %a{:href => "#"}

    %section
      %ul.right
        %li
          = link_to("Home", home_path, :class => controller_active?('home').to_s + " home")
        %li
          = link_to("Proces", flow_path, :class => path_active?(flow_path).to_s + " flow")
        %li{:class => controller_active?('products')}
          = link_to("Diensten", products_path, :class => "products")
        %li{:class => controller_active?('projects')}
          = link_to("Portfolio", projects_path, :class => "portfolio")
        %li
          = link_to("About", about_path, :class => controller_active?('about').to_s + " about")
        %li
          = link_to("Blog", blog_path, :class => controller_active?('blog').to_s + " blog")



