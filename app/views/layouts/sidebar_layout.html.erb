<!DOCTYPE html>
<html>
<head>
	<% if controller_name == 'posts' and action_name == 'show' %>
	  <title>Dreamyourweb | <%= @post.title %></title>
	<% else %>
		<%= render 'layouts/title' %>
	<% end %>
	<%= render 'layouts/head' %>
	<%= render 'layouts/analytics' %>
</head>
<body>
	<div id="root">
	<%= render 'layouts/header' %>

	<div style="clear:both"></div>

	<% flash.each do |key, value| %>
 		<%= content_tag(:div, value, :class => "site-flash #{key}") %>
	<% end %>
	
	<%= render "strip" %>

	<div class='content'>
		<div id='home-left'>
			<div id="main-container">
				<%= yield %>
			</div>
		</div>
		<div id="sidebar-right">
			<%= render "sidebar" %>
		</div>
	</div>


	<div style="clear:both"></div>
	</div>
	<%= render 'layouts/footer' %>
</body>
</html>
