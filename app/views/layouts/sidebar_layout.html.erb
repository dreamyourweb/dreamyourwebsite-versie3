<!DOCTYPE html>
<html>
<head>
  <title>Dreamyourweb | <%= manageable_layout_content_for :title %></title>
	<%= render 'layouts/head' %>
	  <link href="/wymeditor/wymcss.css" media="screen" rel="stylesheet" type="text/css">
  <%= csrf_meta_tags %>
    	<script type="text/javascript" src="/wymeditor/jquery.wymeditor.pack.js"></script>
	<script type="text/javascript">
		jQuery(function() {
	    	jQuery(".wymeditor").wymeditor({
	    		jQueryPath: "/assets/application.js",
				stylesheet: "/wymeditor/wymcss.css"
	    	});
		});
	</script>
	<%= render 'layouts/analytics' %>
</head>
<body>
	<div id="root">
	<%= render 'layouts/header' %>

	<div style="clear:both"></div>

	<% flash.each do |key, value| %>
 		<%= content_tag(:div, value, :class => "site-flash #{key}") %>
	<% end %>
	
	<%= render "strip" %>

	<div class='content'>
		<div id='home-left'>
			<div id="main-container">
				<%= yield %>
			</div>
		</div>
		<div id="sidebar-right">
			<%= render "sidebar" %>
		</div>
	</div>


	<div style="clear:both"></div>
	</div>
	<%= render 'layouts/footer' %>
</body>
</html>
