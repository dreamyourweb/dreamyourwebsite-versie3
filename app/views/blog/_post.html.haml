.post-container.border-bottom.if{:class => "<haml:silent> post.draft? </haml:silent><haml:block>draft</haml:block>"}
  .post-header
    #post-info
      %h2= link_to(post.title, post_path(post), :class => "post-title")
      %h4.subheader
        %small #{time_tag(post.updated_at.to_date)} door #{post.associate.name}
  #post-excerpt
    %p= post.excerpt.html_safe
    %p= post.body.html_safe
    .admin
      - if admin_signed_in?
        %br.admin
          = link_to 'Edit', edit_post_path(post), :class => "bookman-link admin"
          = link_to 'Destroy', post_path(post), confirm: 'Are you sure?', method: :delete, :class => "bookman-link admin"